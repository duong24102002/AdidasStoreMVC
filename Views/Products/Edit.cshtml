@model AdidasStoreMVC.Models.Product
@{
    ViewData["Title"] = "Sửa sản phẩm";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Tên sản phẩm</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Giá</label>
        <input asp-for="Price" class="form-control" type="number" min="0" step="1000" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageUpload">Ảnh sản phẩm (PNG):</label>
        <input type="file" name="ImageUpload" accept=".png" class="form-control" />
        <span class="form-text text-muted">Chỉ chọn khi muốn thay ảnh sản phẩm</span>
    </div>
    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}